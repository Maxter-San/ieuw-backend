datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Float
  views       Int
  photo       String @default("")
}

model User {
  id Int    @id @default(autoincrement())
  name String
  lastName String
  password String
  email String @unique
}


